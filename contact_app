#!/usr/bin/env bash

case $1 in
  add)
    shift
    if [[ ! -f ./contactdb/contacts ]]; then
      if [[ ! -d ./contactdb ]]; then
        mkdir ./contactdb
      fi
      touch ./contactdb/contacts
    fi
    while getopts ":n:e:a:p:" opt; do
      case ${opt} in 
        n)
          name=$OPTARG
          ;;
        e)
          email=$OPTARG
        a) 
          address=$OPTARG
        p)
          phone=$OPTARG
        :) 
          echo "please provide 
      esac 
    done
    echo $name $email $address $phone >> ./contactdb/contacts
    echo "contact saved contact for $name"
    ;;
  remove)
    echo remove
    ;;
  show)
    shift
    getopts ":npae"
    echo $opts $@
    ;;
  *)
    echo "usage: $0 {add|remove|show} [options]"
    ;; 
esac
